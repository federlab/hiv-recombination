rule calc_linkage:
    input:
     dataDir + "mu1e-05_rho{rho_val}_Ne10000_M800_rep{rep}/analysis/FilteredLoci",
     (dataDir + "mu1e-05_rho{rho_val}_Ne10000_M800_rep{rep}/numpy/" + s + ".npy" for s in timepoint_list)
    output:
     dataDir + "mu1e-05_rho{rho_val}_Ne10000_M800_rep{rep}/linkage/r2_and_D"
    script: ruleScriptDir + "calc_linkage.py"

rule calc_d_rat:
    input:
     dataDir + "mu1e-05_rho{rho_val}_Ne10000_M800_rep{rep}/linkage/r2_and_D"
    output:
     dataDir + "mu1e-05_rho{rho_val}_Ne10000_M800_rep{rep}/linkage/d_ratio"
    script: ruleScriptDir + "calc_d_rat.py"